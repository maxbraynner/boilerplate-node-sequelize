{
  "name": "boilerplate-node-sequelize",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "node node_modules/.bin/gulp",
    "start:dev": "ts-node src/index.ts",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "start": "node lib/index.js",
    "test": "rm -rf ./test/reports && mocha --recursive --timeout 15000 -r ts-node/register test/app/**/*.ts --reporter mochawesome --reporter-options reportDir=./test/reports/,reportFilename=tests-result || exit 0",
    "migrate": "npm run build && node_modules/.bin/sequelize db:migrate",
    "seed": "npm run build && node_modules/.bin/sequelize db:seed:all",
    "seed:undo": "npm run build && node_modules/.bin/sequelize db:seed:undo:all",
    "postinstall": "test -n \"$NO_YARN_POSTINSTALL\" || yarn run migrate",
    "prune": "node yarn-prune.js"
  },  
  "main": "lib/index.js",
  "dependencies": {
    "boom": "^7.2.0",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "ejs": "^2.6.1",
    "express": "~4.16.0",
    "express-validation": "^1.0.2",
    "firebase-admin": "~5.12.0",
    "helmet": "^3.12.1",
    "html-pdf": "^2.2.0",
    "joi": "^13.2.0",
    "joi-cpf-cnpj": "^0.1.0",
    "morgan": "~1.9.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "qrcode": "^1.2.0",
    "sequelize": "^4.37.10"
  },
  "devDependencies": {
    "@types/boom": "^7.2.0",
    "@types/chai": "^4.1.3",
    "@types/chai-http": "^3.0.4",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.11.1",
    "@types/faker": "^4.1.2",
    "@types/helmet": "^0.0.37",
    "@types/http-status": "^0.2.30",
    "@types/joi": "^13.0.8",
    "@types/mocha": "^5.2.0",
    "@types/morgan": "^1.7.35",
    "@types/qrcode": "^1.2.0",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "@types/sequelize": "^4.27.20",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "faker": "^4.1.0",
    "firebase-mock": "^2.2.2",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^4.0.2",
    "http-status": "^1.1.0",
    "mocha": "^5.1.1",
    "mochawesome": "^3.0.2",
    "nodemon": "^1.17.5",
    "pg-promise": "^8.4.4",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "sequelize-cli": "^4.0.0",
    "ts-node": "^6.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.9.2"
  },
  "private": true
}
