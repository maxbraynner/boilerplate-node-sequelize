{
  "name": "boilerplate-node-sequelize",
  "scripts": {
    "sequelize": "./node_modules/.bin/sequelize",
    "db:start": "npm run sequelize db:migrate && npm run sequelize db:seed:all",
    "db:migrate": "npm run build && npm run sequelize db:migrate",
    "db:seed": "npm run build && npm run sequelize db:seed:all",
    "db:undo": "npm run build && npm run sequelize db:seed:undo:all && npm run sequelize db:migrate:undo:all",
    "db:reset": "npm run build && npm run db:undo && npm run db:start",
    "start": "npm run db:start && node lib/index.js --scripts-prepend-node-path",
    "start:debug": "node --inspect=0.0.0.0:9229 -r ts-node/register src/index.ts",
    "start:dev": "./node_modules/nodemon/bin/nodemon.js --scripts-prepend-node-path",
    "lint": "tslint --project tsconfig.json",
    "build": "node node_modules/.bin/gulp default",
    "prune": "node yarn-prune.js",
    "postinstall": "test -n \"$NO_YARN_POSTINSTALL\" || npm run build",
    "pretest": "yarn db:migrate",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "main": "lib/index.js",
  "engines": {
    "node": ">=8.9.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start:debug",
    "ext": "ts"
  },
  "dependencies": {
    "@sentry/node": "^4.6.4",
    "boom": "^7.2.0",
    "cls-hooked": "^4.2.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^7.0.0",
    "express": "~4.16.0",
    "express-validation": "^1.0.2",
    "firebase-admin": "^7.0.0",
    "helmet": "^3.12.1",
    "joi": "^14.3.1",
    "joi-cpf-cnpj": "^0.1.0",
    "morgan": "~1.9.0",
    "on-finished": "^2.3.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "qrcode": "^1.2.0",
    "sequelize": "^5.2.1",
    "sequelize-cli": "^5.4.0"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.3.4",
    "@types/boom": "^7.2.0",
    "@types/cls-hooked": "^4.2.1",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.11.1",
    "@types/factory-girl": "^5.0.0",
    "@types/faker": "^4.1.2",
    "@types/helmet": "^0.0.43",
    "@types/http-status": "^0.2.30",
    "@types/jest": "^24.0.6",
    "@types/joi": "^14.3.2",
    "@types/morgan": "^1.7.35",
    "@types/on-finished": "^2.3.1",
    "@types/qrcode": "^1.2.0",
    "@types/request": "^2.47.0",
    "@types/request-promise-native": "^1.0.14",
    "@types/sequelize": "^4.27.44",
    "@types/supertest": "^2.0.7",
    "factory-girl": "^5.0.4",
    "faker": "^4.1.0",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-typescript": "^5.0.0",
    "jest": "^24.1.0",
    "nodemon": "^1.17.5",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "sqlite3": "^4.0.6",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.8.0",
    "typescript": "^3.3.4000"
  },
  "private": true
}
